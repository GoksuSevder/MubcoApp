@model User
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>
<div>
    @ViewBag.LoginError
</div>
<form asp-controller="Login" asp-action="SignIn" method="post">
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="UserName" type="text"  value="@Model.UserName">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input asp-for="Password" value="@Model.Password" type="password" >
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-10 offset-2">
            <button class="btn btn-primary" type="submit">Giriş</button>
        </div>

    </div>
</form>